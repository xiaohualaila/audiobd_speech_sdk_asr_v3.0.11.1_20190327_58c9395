<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/abstract_bj">
    <include
        android:id="@+id/include_common_back"
        layout="@layout/common_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <include layout="@layout/tips_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@+id/include_common_back"
        android:layout_marginLeft="180dp"
        android:layout_marginRight="180dp"/>
    <ImageView
        android:id="@+id/iv_people"
        android:layout_width="1860dp"
        android:layout_height="560dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toTopOf="@+id/include"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/tv_num_question_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="160dp"
        android:src="@drawable/tob_icon"/>

    <TextView
        android:id="@+id/tv_num_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_num_question_bg"
        app:layout_constraintLeft_toLeftOf="@+id/tv_num_question_bg"
        app:layout_constraintRight_toRightOf="@+id/tv_num_question_bg"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="第一题"/>
    <TextView
        android:id="@+id/tv_question"
        android:layout_width="530dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_num_question"
        android:textColor="@color/black"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="80dp"
        android:textSize="30sp" />

    <include
        android:id="@+id/include"
        layout="@layout/common_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:src="@drawable/next"
        app:layout_constraintBottom_toBottomOf="@+id/iv_people"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toTopOf="@+id/iv_next"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</android.support.constraint.ConstraintLayout>