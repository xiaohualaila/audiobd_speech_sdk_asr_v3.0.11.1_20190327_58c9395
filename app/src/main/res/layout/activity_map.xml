<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1280dp"
            >
            <com.amap.api.maps.MapView
                android:id="@+id/map"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="900dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/camera_bg" />

            <include layout="@layout/tips_view"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@+id/ranking_1"
                app:layout_constraintLeft_toRightOf="@+id/ranking_1"
                app:layout_constraintRight_toLeftOf="@+id/ranking_2"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="200dp"/>

            <ImageView
                android:id="@+id/iv_back"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="90dp"
                android:src="@drawable/back_icon"/>
            <TextView
                android:id="@+id/iv_back_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_back"
                android:layout_marginTop="90dp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:textSize="30sp"
                android:text="返回"/>
            <include layout="@layout/linerarlayout_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="38dp"
                android:layout_marginBottom="20dp"
                android:layout_above="@+id/iv_left_btn"/>
            <ImageView
                android:id="@+id/iv_left_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="95dp"
                android:layout_marginLeft="110dp"
                android:src="@drawable/left_btn"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:id="@+id/iv_right_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="95dp"
                android:layout_marginRight="110dp"
                android:src="@drawable/right_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
            <ImageView
                android:id="@+id/take_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/take_photo"
                android:layout_above="@+id/iv_shiguang"
                />
            <ImageView
                android:id="@+id/iv_answer_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_above="@+id/iv_right_btn"
                android:layout_margin="40dp"
                android:src="@drawable/answer_questions"/>
            <ImageView
                android:id="@+id/iv_shiguang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="80dp"
                android:src="@drawable/shiguang"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>

