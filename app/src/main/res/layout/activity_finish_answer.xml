<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map_choose_btns">
    <include
        android:id="@+id/include_common_back"
        layout="@layout/common_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <include layout="@layout/tips_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@+id/include_common_back"
        android:layout_marginLeft="180dp"
        android:layout_marginRight="180dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="300dp"
        android:layout_marginRight="300dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/white_bording" />
    <ImageView
        android:id="@+id/sheng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/include_common_back"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="600dp"
        android:src="@drawable/sheng" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/include_common_back"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="600dp"
        android:src="@drawable/sheng" />
    <ImageView
        android:layout_width="500dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/sheng"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/words_img" />
    <ImageView
        android:id="@+id/back_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="630dp"
        android:src="@drawable/back_first"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tip" />

    <ImageView
        android:id="@+id/conti_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="630dp"
        android:src="@drawable/conti_"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back_first" />

    <include
        layout="@layout/common_bottom_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_score" />

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"

        android:textColor="@color/yellow"
        android:textSize="200sp"
        android:text="30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tv_score"
        app:layout_constraintBottom_toBottomOf="@+id/tv_score"
        android:textSize="60sp"
        android:textColor="@color/yellow"
        android:layout_marginBottom="5dp"
        android:text="åˆ†"/>


</android.support.constraint.ConstraintLayout>