<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android" >
    <include layout="@layout/title_layout"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@drawable/red_result_bg"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/red_circle"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="50dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="200dp"
            android:layout_height="300dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tv_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="@+id/iv_photo"
            app:layout_constraintStart_toEndOf="@+id/iv_photo"
            android:textColor="@color/red"
            android:text="你现在"/>
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/red"
            app:layout_constraintTop_toBottomOf="@+id/tv_now"
            app:layout_constraintLeft_toLeftOf="@+id/tv_now"
            android:text="重回红军时代是" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_1"
            app:layout_constraintLeft_toLeftOf="@+id/tv_1"
            android:textColor="@color/red"
            android:text="蔡锷" />
        <TextView
            android:id="@+id/tv_similar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintLeft_toLeftOf="@+id/name"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/red"
            android:layout_marginTop="20dp"
            android:text="契合度" />
        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_similar"
            app:layout_constraintLeft_toLeftOf="@+id/tv_similar"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/red"
            android:layout_marginTop="10dp"
            android:text="30%" />
        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_photo"
            android:layout_marginTop="30dp"
            android:background="@color/red"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/name_1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_name"/>
        <View
            android:id="@+id/line"
            app:layout_constraintTop_toBottomOf="@+id/tv_history"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/red"
            android:layout_height="1dp"/>

        <ImageView
            android:id="@+id/tv_play_again"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/red_button_back"
          />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
