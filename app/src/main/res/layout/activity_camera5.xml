<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <!--    <ImageView-->
    <!--        android:id="@+id/img"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_below="@+id/camera_sf"-->
    <!--        android:scaleType="fitXY" />-->



    <SurfaceView
        android:id="@+id/camera_sf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="300dp"
        android:background="@drawable/rounded_corner_camera" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/camera_bg"/>

    <ImageView
        android:id="@+id/take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:src="@drawable/take_photo"
        android:text="拍照"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <!--中奖排名-->
    <ImageView
        android:id="@+id/ranking_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ranking"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="50dp"/>

    <!--中奖排名-->
    <ImageView
        android:id="@+id/ranking_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ranking"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ranking_1"
        android:layout_marginRight="50dp"/>

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/ranking_1"
        app:layout_constraintLeft_toLeftOf="@+id/ranking_1"
        android:src="@drawable/photo_frame"/>
    <ImageView
        android:id="@+id/iv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_1"
        app:layout_constraintLeft_toLeftOf="@+id/ranking_1"
        android:src="@drawable/photo_frame"/>
    <ImageView
        android:id="@+id/iv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_2"
        app:layout_constraintLeft_toLeftOf="@+id/ranking_1"
        android:src="@drawable/photo_frame"/>
    <ImageView
        android:id="@+id/iv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_3"
        app:layout_constraintLeft_toLeftOf="@+id/ranking_1"
        android:src="@drawable/photo_frame"/>
    <ImageView
        android:id="@+id/iv_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@+id/ranking_2"
        app:layout_constraintRight_toRightOf="@+id/ranking_2"
        android:src="@drawable/photo_frame"/>
    <ImageView
        android:id="@+id/iv_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_5"
        app:layout_constraintRight_toRightOf="@+id/ranking_2"
        android:src="@drawable/photo_frame"/>
    <ImageView
        android:id="@+id/iv_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_6"
        app:layout_constraintRight_toRightOf="@+id/ranking_2"
        android:src="@drawable/photo_frame"/>
    <ImageView
        android:id="@+id/iv_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_7"
        app:layout_constraintRight_toRightOf="@+id/ranking_2"
        android:src="@drawable/photo_frame"/>

    <ImageView
        android:id="@+id/iv_answer_question"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/iv_left_btn"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="70dp"
        android:src="@drawable/answer_questions"/>

    <ImageView
        android:id="@+id/iv_left_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="130dp"
        android:layout_marginLeft="150dp"
        android:src="@drawable/left_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:layout_marginRight="150dp"
        android:src="@drawable/right_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="116dp"
        android:src="@drawable/shiguang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />



</android.support.constraint.ConstraintLayout>
