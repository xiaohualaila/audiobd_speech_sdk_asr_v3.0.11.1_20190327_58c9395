<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/jianjie_bg">
    <include
        android:id="@+id/include_common_back"
        layout="@layout/common_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <include layout="@layout/tips_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/include_common_back"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="180dp"
        android:layout_marginRight="180dp"/>

    <include
        layout="@layout/common_bottom_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>