<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <SurfaceView
        android:id="@+id/camera_sf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/rounded_corner_camera" />


    <!--中奖排名-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/camera_bg"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="62dp" />

    <ImageView
        android:id="@+id/ranking_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ranking"
        android:layout_alignParentTop="true" />

    <!--中奖排名-->

    <ImageView
        android:id="@+id/ranking_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ranking"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ranking_1"
        android:layout_marginRight="20dp"/>


        <ImageView
            android:id="@+id/iv_left_pic_1"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="150dp"
            style="@style/left_photo_score"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/ranking_1"/>
        <TextView
            android:id="@+id/left_score_1"
            android:layout_width="170dp"
            android:layout_height="30dp"
            style="@style/bottom_photo_score"
            app:layout_constraintLeft_toLeftOf="@+id/iv_left_pic_1"
            app:layout_constraintRight_toRightOf="@+id/iv_left_pic_1"
            app:layout_constraintBottom_toBottomOf="@+id/iv_left_pic_1"/>

    <ImageView
        android:id="@+id/iv_left_pic_2"
        android:layout_width="170dp"
        android:layout_height="170dp"
        style="@style/left_photo_score"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_left_pic_1"
        app:layout_constraintLeft_toLeftOf="@+id/ranking_1"/>
    <TextView
        android:id="@+id/left_score_2"
        android:layout_width="170dp"
        android:layout_height="30dp"
        style="@style/bottom_photo_score"
        app:layout_constraintLeft_toLeftOf="@+id/iv_left_pic_2"
        app:layout_constraintRight_toRightOf="@+id/iv_left_pic_2"
        app:layout_constraintBottom_toBottomOf="@+id/iv_left_pic_2"/>

    <ImageView
        android:id="@+id/iv_left_pic_3"
        android:layout_width="170dp"
        android:layout_height="170dp"
        style="@style/left_photo_score"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_left_pic_2"
        app:layout_constraintLeft_toLeftOf="@+id/ranking_1"/>

    <TextView
        android:id="@+id/left_score_3"
        android:layout_width="170dp"
        android:layout_height="30dp"
        style="@style/bottom_photo_score"
        app:layout_constraintLeft_toLeftOf="@+id/iv_left_pic_3"
        app:layout_constraintRight_toRightOf="@+id/iv_left_pic_3"
        app:layout_constraintBottom_toBottomOf="@+id/iv_left_pic_3"/>

        <ImageView
            android:id="@+id/iv_left_pic_4"
            android:layout_width="170dp"
            android:layout_height="170dp"
            style="@style/left_photo_score"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_left_pic_3"
            app:layout_constraintLeft_toLeftOf="@+id/ranking_1"/>

    <TextView
        android:id="@+id/left_score_4"
        android:layout_width="170dp"
        android:layout_height="30dp"
        style="@style/bottom_photo_score"
        app:layout_constraintLeft_toLeftOf="@+id/iv_left_pic_4"
        app:layout_constraintRight_toRightOf="@+id/iv_left_pic_4"
        app:layout_constraintBottom_toBottomOf="@+id/iv_left_pic_4"/>

     <ImageView
         android:id="@+id/iv_right_pic_1"
         android:layout_width="170dp"
         android:layout_height="170dp"
         style="@style/right_photo_score"
         android:layout_marginTop="150dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintRight_toRightOf="@+id/ranking_2" />

    <TextView
        android:id="@+id/right_score_1"
        android:layout_width="170dp"
        android:layout_height="30dp"
        style="@style/bottom_photo_score"
        app:layout_constraintLeft_toLeftOf="@+id/iv_right_pic_1"
        app:layout_constraintRight_toRightOf="@+id/iv_right_pic_1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_right_pic_1"/>

    <ImageView
        android:id="@+id/iv_right_pic_2"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        style="@style/right_photo_score"
        app:layout_constraintTop_toBottomOf="@+id/iv_right_pic_1"
        app:layout_constraintRight_toRightOf="@+id/ranking_2"/>

    <TextView
        android:id="@+id/right_score_2"
        android:layout_width="170dp"
        android:layout_height="30dp"
        style="@style/bottom_photo_score"
        app:layout_constraintLeft_toLeftOf="@+id/iv_right_pic_2"
        app:layout_constraintRight_toRightOf="@+id/iv_right_pic_2"
        app:layout_constraintBottom_toBottomOf="@+id/iv_right_pic_2"/>

       <ImageView
           android:id="@+id/iv_right_pic_3"
           android:layout_width="170dp"
           android:layout_height="170dp"
           style="@style/right_photo_score"
           android:layout_marginTop="10dp"
           app:layout_constraintTop_toBottomOf="@+id/iv_right_pic_2"
           app:layout_constraintRight_toRightOf="@+id/ranking_2"/>

    <TextView
        android:id="@+id/right_score_3"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        style="@style/bottom_photo_score"
        app:layout_constraintLeft_toLeftOf="@+id/iv_right_pic_3"
        app:layout_constraintRight_toRightOf="@+id/iv_right_pic_3"
        app:layout_constraintBottom_toBottomOf="@+id/iv_right_pic_3"/>

    <ImageView
        android:id="@+id/iv_right_pic_4"
        android:layout_width="170dp"
        android:layout_height="170dp"
        style="@style/right_photo_score"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_right_pic_3"
        app:layout_constraintRight_toRightOf="@+id/ranking_2"/>

    <TextView
        android:id="@+id/right_score_4"
        android:layout_width="170dp"
        android:layout_height="30dp"
        style="@style/bottom_photo_score"
        app:layout_constraintLeft_toLeftOf="@+id/iv_right_pic_4"
        app:layout_constraintRight_toRightOf="@+id/iv_right_pic_4"
        app:layout_constraintBottom_toBottomOf="@+id/iv_right_pic_4"/>

    <ImageView
        android:id="@+id/iv_answer_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="220dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/answer_questions"/>

    <include
        android:id="@+id/common_bottom_view"
        layout="@layout/common_bottom_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        android:src="@drawable/shiguang"/>
</android.support.constraint.ConstraintLayout>
