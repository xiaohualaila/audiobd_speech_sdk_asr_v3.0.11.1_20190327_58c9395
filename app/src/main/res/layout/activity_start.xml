<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">
    <TextView
        android:id="@+id/tv_time"
        android:textColor="@color/white"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp" />
    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="230dp"
        android:layout_marginRight="164dp"
        android:src="@drawable/ar_url"/>

    <ImageView
        android:id="@+id/iv_step_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="450dp"
        android:src="@drawable/btn_step_first"/>
    <ImageView
        android:id="@+id/iv_step_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/iv_step_first"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="300dp"
        android:onClick="stepSecondBtn"
        android:src="@drawable/btn_step_second"/>
    <ImageView
        android:id="@+id/choose_fruit_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/iv_step_second"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="125dp"
        android:src="@drawable/choose_fruit_bg"/>
    <TextView
        android:id="@+id/btn_fruit_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/choose_fruit_bg"
        app:layout_constraintRight_toRightOf="@+id/choose_fruit_bg"
        app:layout_constraintTop_toTopOf="@+id/choose_fruit_bg"
        android:layout_marginTop="250dp"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:text="蜜桃果酱"/>
    <TextView
        android:id="@+id/btn_fruit_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/choose_fruit_bg"
        app:layout_constraintRight_toRightOf="@+id/choose_fruit_bg"
        app:layout_constraintTop_toBottomOf="@+id/btn_fruit_1"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:text="蜜桃香槟"/>
    <TextView
        android:id="@+id/btn_fruit_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/choose_fruit_bg"
        app:layout_constraintRight_toRightOf="@+id/choose_fruit_bg"
        app:layout_constraintTop_toBottomOf="@+id/btn_fruit_2"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:text="蜜桃果汁"/>
    <TextView
        android:id="@+id/btn_fruit_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/choose_fruit_bg"
        app:layout_constraintRight_toRightOf="@+id/choose_fruit_bg"
        app:layout_constraintTop_toBottomOf="@+id/btn_fruit_3"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:text="蜜桃罐头"/>
    <LinearLayout
        android:layout_width="447dp"
        android:layout_height="292dp"
        android:layout_alignParentTop="true"
        app:layout_constraintBottom_toBottomOf="@+id/iv_step_second"
        app:layout_constraintLeft_toLeftOf="@+id/iv_step_second"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="53dp"
        android:background="@color/black"
        android:gravity="center_vertical">
        <SurfaceView
            android:id="@+id/sf_video"
            android:layout_width="match_parent"
            android:layout_height="292dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>