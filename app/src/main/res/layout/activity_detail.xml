<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rwpp_bg">
    <ImageView
        android:id="@+id/iv_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/back_icon"/>
    <TextView
        android:id="@+id/iv_back_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/iv_back"
        app:layout_constraintLeft_toRightOf="@+id/iv_back"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:textSize="30sp"
        android:text="返回"/>

       <TextView
           android:id="@+id/red_time_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="135dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           android:textSize="20sp"
           android:textColor="@color/white"
           android:text="您重回红军时代是"/>

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="150dp"
            android:layout_height="200dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/red_time_title"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            app:layout_constraintTop_toTopOf="@+id/iv_photo"
            app:layout_constraintLeft_toRightOf="@+id/iv_photo"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="40sp"
            android:text="蔡锷" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/iv_photo"
        app:layout_constraintLeft_toRightOf="@+id/name"
        android:layout_marginLeft="60dp"
        android:src="@drawable/stars_png"/>

    <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/iv_photo"
            app:layout_constraintLeft_toRightOf="@+id/name"
            android:textStyle="bold"
            android:textSize="50sp"
            android:textColor="@color/yellow"
            android:layout_marginLeft="100dp"
            android:text="30" />
    <TextView
        android:id="@+id/tv_100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_score"
        app:layout_constraintLeft_toRightOf="@+id/tv_score"
        android:textSize="30sp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/yellow"
        android:text="%" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_score"
        app:layout_constraintLeft_toLeftOf="@+id/tv_score"
        android:textSize="20sp"
        android:background="@drawable/yellow_bording"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="契合度" />


        <TextView
            android:id="@+id/tv_work"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/red" />


    <View
        android:id="@+id/line_ai"
        android:layout_width="2dp"
        android:layout_height="26dp"
        android:background="@color/red"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_history"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"/>
    <TextView
        android:id="@+id/tv_ai_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_history"
        app:layout_constraintStart_toEndOf="@+id/line_ai"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:text="AI图谱"/>


    <View
        android:id="@+id/line_work"
        android:layout_width="2dp"
        android:layout_height="26dp"
        android:background="@color/red"
        app:layout_constraintLeft_toLeftOf="@+id/line_ai"
        app:layout_constraintTop_toBottomOf="@+id/line_ai"
        android:layout_marginTop="410dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/line_work"
        app:layout_constraintLeft_toRightOf="@+id/line_work"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:layout_marginLeft="10dp"
        android:text="关联词条"/>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexbox"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="220dp"
        app:flexWrap="wrap"
        app:layout_constraintEnd_toStartOf="@+id/iv_answer_question"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_work"/>
    <WebView
        android:id="@+id/web_red_people"
        app:layout_constraintTop_toBottomOf="@+id/line_ai"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/web_red_people"
        android:textColor="@color/white"
        android:text="以上图谱根据后台数据匹配生成"/>

    <TextView
        android:id="@+id/tv_history"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tv_work"
        app:layout_constraintTop_toBottomOf="@+id/tv_work"
        app:layout_constraintRight_toRightOf="parent" />

    <include
        layout="@layout/common_bottom_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_answer_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="240dp"
        android:layout_marginRight="40dp"
        android:src="@drawable/answer_questions"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        android:src="@drawable/shiguang"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="www.buwangchuxin.com"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/tv_ai_"
        app:layout_constraintTop_toBottomOf="@+id/tv_ai_"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:text="(跟人物相关的...)"/>
    </android.support.constraint.ConstraintLayout>


