<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rwpp_bj">
    <ImageView
        android:id="@+id/iv_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/back_icon"/>
    <TextView
        android:id="@+id/iv_back_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/iv_back"
        app:layout_constraintLeft_toRightOf="@+id/iv_back"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:textSize="30sp"
        android:text="返回"/>

    <include layout="@layout/tips_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/iv_back"
        android:layout_marginLeft="180dp"
        android:visibility="gone"
        android:layout_marginRight="180dp"/>


    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="300dp"
        android:layout_height="350dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_back_"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toTopOf="@+id/iv_photo"
        app:layout_constraintLeft_toRightOf="@+id/iv_photo"
        android:textColor="@color/red"
        android:text="下方"
        android:textStyle="bold"
        android:textSize="40sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/name"
        app:layout_constraintLeft_toRightOf="@+id/name"
        android:layout_marginLeft="200dp"
        android:src="@drawable/stars_png"/>

    <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/name"
            app:layout_constraintLeft_toRightOf="@+id/name"
            android:textStyle="bold"
            android:textSize="50sp"
            android:textColor="@color/yellow"
            android:layout_marginLeft="220dp"
            android:text="30" />

    <TextView
        android:id="@+id/tv_100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_score"
        app:layout_constraintLeft_toRightOf="@+id/tv_score"
        android:textSize="30sp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/yellow"
        android:text="%" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_score"
        app:layout_constraintLeft_toLeftOf="@+id/tv_score"
        android:textSize="20sp"
        android:background="@drawable/yellow_bording"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="契合度" />


    <TextView
        android:id="@+id/tv_work"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/tv_history"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tv_work"
        app:layout_constraintTop_toBottomOf="@+id/tv_work"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/line_ai"
        android:layout_width="2dp"
        android:layout_height="26dp"
        android:background="@color/red"
        app:layout_constraintLeft_toRightOf="@+id/tv_score"
        app:layout_constraintTop_toTopOf="@+id/name"
        android:layout_marginLeft="250dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/line_ai"
        app:layout_constraintStart_toEndOf="@+id/line_ai"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:layout_marginLeft="10dp"
        android:text="AI图谱"/>

    <View
        android:id="@+id/line_work"
        android:layout_width="2dp"
        android:layout_height="26dp"
        android:background="@color/red"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_photo"
        app:layout_constraintTop_toBottomOf="@+id/iv_photo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/line_work"
        app:layout_constraintLeft_toRightOf="@+id/line_work"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:layout_marginLeft="10dp"
        android:text="关联词条"/>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexbox"
        android:layout_width="780dp"
        android:layout_height="200dp"
        app:flexWrap="wrap"
        app:layout_constraintLeft_toLeftOf="@+id/line_work"
        app:layout_constraintTop_toBottomOf="@+id/line_work"/>
    <WebView
        android:id="@+id/web_red_people"
        app:layout_constraintTop_toBottomOf="@+id/line_ai"
        app:layout_constraintLeft_toLeftOf="@+id/line_ai"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_width="800dp"
        android:layout_height="550dp"/>
    <include
        layout="@layout/common_bottom_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</android.support.constraint.ConstraintLayout>


